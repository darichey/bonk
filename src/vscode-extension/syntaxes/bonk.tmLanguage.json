{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Bonk",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#dates"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#accounts"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "keywords": {
      "name": "keyword.bonk",
      "match": "\\baccount|todo\\b"
    },
    "strings": {
      "name": "string.quoted.double.bonk",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.bonk",
          "match": "\\\\."
        }
      ]
    },
    "dates": {
      "name": "constant.date.bonk",
      "match": "\\d{4}-\\d{2}-\\d{2}"
    },
    "numbers": {
      "name": "constant.numeric.bonk",
      "match": "\\b-?\\d+(\\.\\d+)?\\b"
    },
    "accounts": {
      "name": "variable.account.bonk",
      "match": "[A-Za-z_][A-Za-z0-9_]*(/[A-Za-z_][A-Za-z0-9_]*)*"
    },
    "comments": {
      "name": "comment.line.number-sign.bonk",
      "match": "#.*"
    }
  },
  "scopeName": "source.bonk"
}
